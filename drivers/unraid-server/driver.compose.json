{
  "name": {
    "en": "Unraid Server"
  },
  "class": "other",
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "capabilities": [
    "measure_power",
    "cpu_usage",
    "cpu_temperature",
    "cpu_power",
    "memory_usage",
    "uptime",
    "notifications_count",
    "array_status",
    "array_usage",
    "storage_used",
    "storage_free",
    "parity_status",
    "disk_health",
    "disk_temperature"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "title": {
        "en": "Server Power"
      },
      "approximated": true
    }
  },
  "images": {
    "small": "/drivers/unraid-server/assets/images/small.png",
    "large": "/drivers/unraid-server/assets/images/large.png",
    "xlarge": "/drivers/unraid-server/assets/images/xlarge.png"
  },
  "pair": [
    {
      "id": "login"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Connection Settings"
      },
      "children": [
        {
          "id": "host",
          "type": "text",
          "label": {
            "en": "Server Address"
          },
          "hint": {
            "en": "IP address or hostname of your Unraid server"
          }
        },
        {
          "id": "httpPort",
          "type": "number",
          "label": {
            "en": "HTTP Port"
          },
          "hint": {
            "en": "HTTP port for your Unraid server. Only change if using a reverse proxy."
          },
          "value": 80,
          "min": 1,
          "max": 65535
        },
        {
          "id": "httpsPort",
          "type": "number",
          "label": {
            "en": "HTTPS Port"
          },
          "hint": {
            "en": "HTTPS port for your Unraid server. Only change if using a reverse proxy."
          },
          "value": 443,
          "min": 1,
          "max": 65535
        },
        {
          "id": "useHttps",
          "type": "checkbox",
          "label": {
            "en": "Use HTTPS"
          },
          "hint": {
            "en": "Connect securely via HTTPS"
          },
          "value": true
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Polling Settings"
      },
      "children": [
        {
          "id": "systemPollInterval",
          "type": "number",
          "label": {
            "en": "System Poll Interval (seconds)"
          },
          "hint": {
            "en": "How often to poll CPU, memory, and temperature"
          },
          "value": 30,
          "min": 10,
          "max": 300
        },
        {
          "id": "storagePollInterval",
          "type": "number",
          "label": {
            "en": "Storage Poll Interval (seconds)"
          },
          "hint": {
            "en": "How often to poll storage and array information"
          },
          "value": 300,
          "min": 60,
          "max": 3600
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "UPS Settings"
      },
      "children": [
        {
          "id": "upsNominalPower",
          "type": "number",
          "label": {
            "en": "UPS Nominal Power (W)"
          },
          "hint": {
            "en": "The nominal power rating of your UPS in Watts. Used to calculate power consumption from load percentage. Check your UPS specs for this value (e.g. 800W)."
          },
          "value": 0,
          "min": 0,
          "max": 10000
        }
      ]
    }
  ]
}
